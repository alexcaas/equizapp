<script id="tmpl-UpdateUserView" type="text/html">

    <div class="UpdateUserView">
    
        <ol class="breadcrumb voffsettbot2">
            <li class="active">Actualizar usuario</li>
        </ol>

        <form id="register_form" class="form-horizontal" role="form">
          
          <div class="alert alert-danger alert-block fade voffsettbot2">
            <button type="button" class="close">×</button>
          </div>
          
          <div class="form-group">
            <label for="updu-user-email" class="col-lg-2 control-label">Email:</label>
            <div class="col-lg-9">
                <p class="form-control-static"><strong>email@ejemplo.com</strong></p>
            </div>
          </div>
          
          <div class="form-group">
            <label for="updu-user-name" class="col-lg-2 control-label">Nombre:</label>
            <div class="col-lg-9">
              <input type="text" class="form-control" id="updu-user-name" placeholder="Nombre" autocomplete="on" required data-prop="username">
            </div>
          </div>
          
          <div class="form-group">
            <label for="updu-user-lastnames" class="col-lg-2 control-label">Apellidos:</label>
            <div class="col-lg-9">
              <input type="text" class="form-control" id="updu-user-lastnames" placeholder="Apellidos" autocomplete="on" required data-prop="userlastnames">
            </div>
          </div>

          <div class="form-group">
            <label for="updu-user-password" class="col-lg-2 control-label">Contraseña:</label>
            <div class="col-lg-9">
              <input type="password" class="form-control" id="updu-user-password" placeholder="Contraseña" required data-prop="userpassword">
            </div>
          </div>
          
          <div class="form-group">
            <label for="updu-user-retypepassword" class="col-lg-2 control-label">Contraseña:</label>
            <div class="col-lg-9">
              <input type="password" class="form-control" id="updu-user-retypepassword" placeholder="Repita contraseña" required data-prop="userretypepassword">
            </div>
          </div>

          <div class="form-group">
            <div class="col-lg-offset-5 col-xs-offset-5">
              <button type="submit" class="btn btn-info" value="updateuser" data-action="updateuser" id="updu-update-button">Actualizar</button>
            </div>
          </div>
          
        </form>

        
    </div>

</script>